name: ‘React Pipeline'
on:
  push:
    branches:
    - master
  pull_request:
  workflow_dispatch:
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: action/checkout@v2
      
      - name: Set up Node.js
        uses: actions/setup-node@v1
        with:
          node-version: ’18.x’
          
      - name: Upload Artifact for deployment
        uses: actions/upload-artifact@v2
        with:
          name: node-app
          path: .
          
  deploy:
    runs-on: ubuntu-latest
    needs: build
    environment:
      name: ‘Production’
      url: ${{ VARIABLE }}

    steps:
    - name: Download Artifact from build job
      uses: actions/download-artifact@v2
      with:
        name: node-app

    - name: Deploy to Azure App Server
      id: deploy-to-webapp
      uses: actions/webapps-deploy@v2
      with:
        app-name: ‘APP-NAME’
        slot-name: ‘Production’
        publish-profile: ${{ VARIABLE }}
        package: .
